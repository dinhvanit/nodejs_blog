<h1 class="mb-4">Đăng bài viết mới</h1>
<form action="/posts/store" method="POST">
    <div class="form-group">
        <label for="title">Tiêu đề</label>
        <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <div class="form-group">
        <label for="slug">Slug (url)</label>
        <input type="text" class="form-control" id="slug" name="slug" required>
    </div>

    <div class="form-group">
        <label for="featuredImage">Ảnh đại diện (URL)</label>
        <input type="text" class="form-control" id="featuredImage" name="featuredImage">
    </div>

    <div class="form-group">
        <label for="content">Nội dung</label>
        <textarea class="form-control" id="content" name="content" rows="6"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Đăng bài</button>
</form>
